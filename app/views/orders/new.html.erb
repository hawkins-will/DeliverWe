<div class="center_page">
  <h1>Create a New Order from <%= @restaurant.name %></h1>

  <div class="form">
    <%= form_for [@restaurant, @order] do |f| %>
      <%= f.label "What Time Do You Plan on Ordering? (input as HH:MM am/pm)" %>
      <br>
      <%= f.text_area :time %>

      <br>
      <br>
      <div class="form_buttons">
        <div class="form_button_blue">
        <%= f.submit %>
      <% end %>
        </div>
      </div>
      <br>
    <%= link_to "<< Home", root_path %>
  </div>
</div>
