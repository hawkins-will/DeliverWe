<h1>Create a New Order from <%= @restaurant.name %></h1>

<form action="/<%= @restaurant.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="order[note]">Would you like to include a Note? (50 character max)</label>
  <br>
  <textarea class="note_input" name="order[note]"></textarea>

  <input type="hidden" name="order[restaurant_id]" value="<%= @restaurant.id %>">

  <br>
  <br>

  <input type="submit" value="CREATE">

</form>
