<div class="center_page">
  <h1>Edit Order from <%= @order.restaurant.name %></h1>

  <div class="form">
    <%= form_for @order do |f| %>
      <%= f.label "What Time Do You Plan on Ordering?" %>
      <br>
      <%= f.text_area :time %>

      <br>
      <br>
      <div class="form_buttons">

      <div class="form_button_blue">
        <%= f.submit %>
      </div>
    <% end %>
    <br>
    <a href="/order/<%= @order.id %>/cancel">
      <div class="orange_button orange_link">
        <p>Cancel Order</p>
      </div>
    </a>
    </div>
  </div>
  <br>
  <%= link_to "<< BACK", order_path(@order) %>
</div>
