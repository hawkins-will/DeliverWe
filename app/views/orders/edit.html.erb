<h1>Edit Note for order from <%= @order.restaurant.name %></h1>

<%= form_for @order do |f| %>
  <%= f.label "What Time Do You Plan on Ordering?" %>
  <br>
  <%= f.text_field :time %>

  <br>
  <br>

  <%= f.label "Would you like to include a note? (50 Character Limit)" %>
  <br>
  <%= f.text_area :note %>

  <br>
  <br>

  <%= f.submit %>
<% end %>
<br>
<%= link_to "BACK", order_path(@order) %>
