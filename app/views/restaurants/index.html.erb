<div class="page_break">
  <h2>Orders!</h2>
</div>
<div class="restaurant_section">
  <% @orders = @orders.sort_by do |order| %>
  <% order.patrons.length %>
  <% end %>
  <% @orders = @orders.reverse %>
  <% @orders.each do |order| %>
  <% @order_tax = Restaurant.find(order.restaurant_id).tax %>
  <% @order_price = 0.00 + Restaurant.find(order.restaurant_id).delivery_fee %>
  <div class="order_box">
    <div class="box_header">
      <p><img class="logo" src="<%= Restaurant.find(order.restaurant_id).logo_url %>" alt="<%= Restaurant.find(order.restaurant_id).name %> Logo"><p>
      <div class="box_header_right">
        <a class="no_underline" href="/order/<%= order.id %>"><p class="box_title"><%= Restaurant.find(order.restaurant_id).name %></p></a>
        <div class="head_patron_box">
          <p class="head_patron_label">Head Patron:</p>
          <% if order.patrons.length >= 1 %>
            <p class="head_patron"><%= order.patrons.first.name %></p>
          <% else %>
            <p class="head_patron">No One Has Taken Charge</p>
          <% end %>
        </div>
      </div>
    </div>
      <h4 class="join_order"><a href="/order/<%= order.id %>/join">Join Order</a></h4>
      <div class="patron_box">
        <% order.patrons.each do |patron| %>
            <p class="patron_line"><a href="/patrons/<%= patron.id %>"><%= patron.name %></a></p>
            <% patron.items.each do |item| %>
              <% @order_price = @order_price + item.price %>
              <% if item.modifications_price %>
                <% @order_price = @order_price + item.modifications_price %>
              <% end %>
            <% end %>
        <% end %>
      </div>
      <br>
      <% if order.note %>
        <div class="index_note">
          <p><%= order.note %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<br>
<div class="page_break">
  <h2>Restaurants!</h2>
</div>
<div class="restaurant_section">
  <% @restaurants.each do |restaurant| %>
    <div class="restaurant_box">
      <div class="box_header">
        <p><img class="logo" src="<%= restaurant.logo_url %>" alt="<%= restaurant.name %> Logo"></p>
        <a class="no_underline" href="/<%= restaurant.id %>/new_order"><div class="restaurant_header_right">
            <p class ="restaurant_name"><%= restaurant.name %></p>
        </div></a>
      </div>
      <div class="restaurant_bottom_box">
        <a class="no_underline" href="<%= restaurant.menu_link %>"><div class="restaurant_quadrant">
          <p>Menu</p>
        </div></a>
        <a class="no_underline" href="/<%= restaurant.id %>/new_order"><div class="restaurant_quadrant">
          <p>SUGGEST</p>
        </div></a>
        <div class="restaurant_quadrant">
          <p><%= number_to_currency(restaurant.delivery_fee) %> Fee</p>
        </div>
        <div class="restaurant_quadrant">
          <p><%= number_to_currency(restaurant.delivery_min) %> Minimum</p>
        </div>
      </div>
    </div>
    <br>
  <% end %>
</div>
