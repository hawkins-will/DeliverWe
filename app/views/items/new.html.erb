<h1>Add to <%= @patron.name %>'s Order</h1>

<p><a target="_blank" href="<%= @patron.order.restaurant.menu_link %>"><%= @patron.order.restaurant.name %> Menu</a></p>

<%= form_for [@patron, @item] do |f| %>
  <%= f.label :name %>
  <br>
  <%= f.text_field :name %>

  <br>
  <br>

  <%= f.label :price %>
  <br>
  <%= f.text_field :price %>

  <br>
  <br>

  <%= f.label :modifications %>
  <br>
  <%= f.text_area :modifications %>

  <br>
  <br>

  <%= f.label :modifications_price %>
  <br>
  <%= f.text_field :modifications_price %>

  <br>
  <br>

  <%= f.submit %>
<% end %>

<h4><a href="/">HOME</a></h4>
