<div class="center_page">
  <h1>Edit <%= @item.name %></h1>
  <div class="form">
    <%= form_for @item do |f| %>
      <%= f.label "What's the Name of the Item You'd Like to Order?" %>
      <br>
      <%= f.text_area :name %>

      <br>
      <br>

      <%= f.label "Price?" %>
      <br>
      <%= f.text_area :price %>

      <br>
      <br>

      <%= f.label "Would you like to make any modifications? (Optional)" %>
      <br>
      <%= f.text_area :modifications %>

      <br>
      <br>

      <%= f.label "What's the Price of your Modifications? (Optional)" %>
      <br>
      <%= f.text_area :modifications_price %>

      <br>
      <br>
      <div class="form_buttons">
        <div class="form_button_blue">
          <%= f.submit %>
        <% end %>
        </div>
        <%= link_to @item, method: :delete, class: "delete" do %>
          <div class="orange_button orange_link">
            <p>Cancel Item</p>
          </div>
        <% end %>
      </div>
  </div>
    <br>
  <%= link_to "<< Back", order_path(@item.patron.order) %>
</div>
