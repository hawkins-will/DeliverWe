<h1>Edit <%= @item.name %></h1>

  <%= form_for @item do |f| %>
  <%= f.label :name %>
  <br>
  <%= f.text_field :name %>

  <br>
  <br>

  <%= f.label :price %>
  <br>
  <%= f.text_field :price %>

  <br>
  <br>

  <%= f.label :modifications %>
  <br>
  <%= f.text_area :modifications %>

  <br>
  <br>

  <%= f.label :modifications_price %>
  <br>
  <%= f.text_field :modifications_price %>

  <br>
  <br>

  <%= f.submit %>
<% end %>
